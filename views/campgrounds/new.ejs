<%- include ('../partials/header.ejs')%>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Create a new Campgrounds </h1>
        <div style="width:30%;margin:25px auto;">
            <form action="/index" method="POST" >
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="img" placeholder="image url">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="Description">
                </div>
                
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/index">View all campgrounds</a>  
        </div>
      
    </div>
    
</div>

<%- include ('../partials/footer.ejs')%>