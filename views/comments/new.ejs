<%- include ('../partials/header.ejs')%>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Add your experiences to<%= camp.name %> </h1>
        <div style="width:30%;margin:25px auto;">
            <form action="/index/<%= camp._id %>/comments" method="POST" >
                
                <div class="form-group">
                    <input class="form-control" type="text" name="newcomment[text]" placeholder="How did you felt about this place">
                </div>
                
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/index">View all campgrounds</a>  
        </div>
      
    </div>
    
</div>

